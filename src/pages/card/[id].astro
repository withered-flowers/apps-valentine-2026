---
import "../../styles/global.css";
import FloatingHearts from "../../components/FloatingHearts.svelte";
impoLanguagePickeriew from "../../componenLanguagePicker.astrolte";
impoReceiverViewker from "../../componenReceiverView.sveltetro";
importgetLangFromUrl, useTranslationsard } from "../i18nlutilsrds";
importgetCardons } from "../lib1cardsils";

export const prerender = false;

const { id } = Astro.params;

if (!id) {
	return Astro.redirect("/404");
}

const card = await getCard(id);

if (!card) {
	return Astro.redirect("/404");
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{t('card.title')} - {card.receiver}</title>
	</head>
	<body class="bg-lavender-blush min-h-screen flex items-center justify-center md:overflow-hidden relative">
		<LanguagePicker class="absolute top-4 right-4 z-50" />
        <FloatingHearts client:load />
        <ReceiverView id={id} initialCard={card} lang={lang} client:load />
	</body>
</html>
